# CUSTOM FUNCTIONS
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

# Enhanced scan function
function scan() {
    echo -e "\e[1;31m[*] Scanning target: $1\e[0m"
    echo -e "\e[0;36mâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\e[0m"
    if command -v nmap &> /dev/null; then
        nmap -A $1
    else
        echo -e "\e[1;33m[!] nmap not installed\e[0m"
    fi
}

# Extract various archive types
function extract() {
    if [ -f $1 ]; then
        case $1 in
            *.tar.bz2)   tar xjf $1     ;;
            *.tar.gz)    tar xzf $1     ;;
            *.bz2)       bunzip2 $1     ;;
            *.rar)       unrar e $1     ;;
            *.gz)        gunzip $1      ;;
            *.tar)       tar xf $1      ;;
            *.tbz2)      tar xjf $1     ;;
            *.tgz)       tar xzf $1     ;;
            *.zip)       unzip $1       ;;
            *.Z)         uncompress $1  ;;
            *.7z)        7z x $1        ;;
            *)           echo "'$1' cannot be extracted" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}

# Make directory and cd into it
function mkcd() {
    mkdir -p "$1" && cd "$1"
}

# Quick backup
function backup() {
    cp "$1" "$1.backup-$(date +%Y%m%d-%H%M%S)"
}

# Search command history
function h() {
    history | grep "$1"
}

# Quick note taking
function note() {
    echo "[$(date '+%Y-%m-%d %H:%M:%S')] $*" >> ~/notes.txt
}

# Show todos
function todo() {
    if [ "$1" == "add" ]; then
        shift
        echo "[ ] $*" >> ~/todo.txt
    else
        cat ~/todo.txt 2>/dev/null || echo "No todos yet. Use: todo add <task>"
    fi
}

