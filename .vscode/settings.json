  "outline.showFiles": false,
  "outline.showModules": true,

  // üîÑ Advanced Git Integration
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.defaultCloneDirectory": "/home/diablorain/Projects",
  "scm.diffDecorations": "all",
