{
  // üéØ SynOS Ultimate Development Environment Configuration
  // Optimized for cybersecurity education and Linux distribution development

  // üíª Terminal Configuration
  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.defaultProfile.linux": "SynOS Development Shell",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash",
      "args": ["-l"],
      "icon": "terminal-bash",
      "env": {
        "TERM": "xterm-256color"
      }
    },
    "SynOS Development Shell": {
      "path": "/bin/bash",
      "args": ["-l"],
      "icon": "gear",
      "env": {
        "TERM": "xterm-256color",
        "RUST_BACKTRACE": "1",
        "SYNOS_DEV_MODE": "1",
        "CARGO_TARGET_DIR": "${workspaceFolder}/target",
        "CARGO_BUILD_JOBS": "1",
        "PYTHONDONTWRITEBYTECODE": "1",
        "PATH": "${workspaceFolder}/scripts:${env:PATH}",
        "SYNOS_PROJECT_ROOT": "${workspaceFolder}"
      }
    },
    "Security Testing Shell": {
      "path": "/bin/bash",
      "args": ["-l"],
      "icon": "shield",
      "env": {
        "RUST_BACKTRACE": "full",
        "SYNOS_SECURITY_MODE": "1",
        "PATH": "${workspaceFolder}/scripts:${workspaceFolder}/core/security/tools:${env:PATH}"
      }
    },
    "Distribution Builder Shell": {
      "path": "/bin/bash",
      "args": ["-l"],
      "icon": "package",
      "env": {
        "SYNOS_BUILD_MODE": "1",
        "PATH": "${workspaceFolder}/linux-distribution/tools:${workspaceFolder}/scripts:${env:PATH}"
      }
    },
    "Claude Code AI": {
      "path": "claude-code",
      "icon": "robot",
      "color": "terminal.ansiBlue",
      "env": {
        "SYNOS_PROJECT_ROOT": "${workspaceFolder}",
        "CLAUDE_CONTEXT": "synos-development"
      }
    }
  },
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.automationProfile.linux": {
    "path": "/bin/bash",
    "args": ["-l"]
  },
  "terminal.integrated.rendererType": "canvas",
  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.persistentSessionReviveProcess": "onExit",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.rightClickBehavior": "paste",
  // ü¶Ä Rust Language Server Optimization
  "rust-analyzer.files.excludeDirs": [
    "archive",
    "archive-consolidated",
    "backup",
    "backup-*",
    "custom-os-development",
    "linux-distribution/SynOS-Linux-Builder",
    "linux-distribution",
    "development/complete-docker-strategy",
    "multi_cloud",
    "advanced_ai/archive",
    "logs",
    "results",
    "reports",
    "target",
    "build",
    "fuzz"
  ],
  "rust-analyzer.cargo.unsetTest": [
    "archive",
    "backup",
    "custom-os-development"
  ],
  "rust-analyzer.checkOnSave": false,
  "rust-analyzer.check.enable": false,
  "rust-analyzer.check.command": "check",
  "rust-analyzer.check.allTargets": false,
  "rust-analyzer.server.extraEnv": {
    "RA_LOG": "error",
    "CARGO_BUILD_JOBS": "1"
  },
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.cargo.buildScripts.enable": true,
  "rust-analyzer.cargo.buildScripts.overrideCommand": null,
  "rust-analyzer.completion.callable.snippets": "fill_arguments",
  "rust-analyzer.assist.importGranularity": "module",
  "rust-analyzer.diagnostics.disabled": ["unresolved-proc-macro"],
  "rust-analyzer.cargo.loadOutDirsFromCheck": true,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.lens.enable": false,
  "rust-analyzer.completion.limit": 50,
  "rust-analyzer.linkedProjects": [
    "Cargo.toml",
    "src/ai-engine/Cargo.toml",
    "src/kernel/Cargo.toml",
    "custom-os-development/core/security/Cargo.toml",
    "custom-os-development/core/services/Cargo.toml"
  ],
  "rust-analyzer.cargo.features": [
    "consciousness",
    "ai-bridge",
    "educational",
    "security-enhanced",
    "cybersec-tools",
    "mssp-platform",
    "red-team-tools",
    "blue-team-defense"
  ],

  // üöÄ Performance Optimization
  "files.maxMemoryForLargeFilesMB": 256,
  "files.watcherExcludeBoost": 10000,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 8,
  "workbench.editor.closeEmptyGroups": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.tree.renderIndentGuides": "onHover",
  "files.maxMemoryForLargeFilesMB": 512,
  "search.maxResults": 10000,
  "search.smartCase": true,
  "search.useIgnoreFiles": true,
  "search.useParentIgnoreFiles": true,
  "search.followSymlinks": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "extensions.autoUpdate": false,
  "git.decorations.enabled": true,
  "scm.diffDecorationsGutterVisibility": "hover",

  // üé≠ Interface Configuration
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "a-file-icon-vscode",
  "workbench.startupEditor": "welcomePageInEmptyWorkbench",
  "workbench.enableExperiments": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.tips.enabled": false,
  "workbench.welcomePage.walkthroughs.openOnInstall": false,

  // üîí Privacy & Security
  "telemetry.telemetryLevel": "off",
  "update.mode": "manual",
  "extensions.autoCheckUpdates": false,
  "security.workspace.trust.enabled": true,
  "security.workspace.trust.banner": "always",
  "security.workspace.trust.startupPrompt": "always",

  // üìÅ File Associations
  "files.associations": {
    "*.deb": "binary",
    "*.iso": "binary",
    "*.squashfs": "binary",
    "Dockerfile*": "dockerfile",
    "*.service": "systemd",
    "*.socket": "systemd",
    "*.timer": "systemd",
    "*.desktop": "desktop",
    "*.rules": "udev",
    "sources.list*": "debian-sources",
    "*.preseed": "debian-preseed",
    "*.rs": "rust",
    "*.toml": "toml",
    "*.md": "markdown",
    "*.sh": "shellscript",
    "*.py": "python",
    "*.yml": "yaml",
    "*.yaml": "yaml"
  },

  // üëÅÔ∏è File Exclusions (prevent workspace enumeration issues)
  "files.exclude": {
    "**/target": true,
    "**/fuzz/corpus": true,
    "**/fuzz/artifacts": true,
    "workspace-audit-report.json": true,
    "**/.venv": true,
    "**/venv": true,
    "**/node_modules": true,
    "**/logs": true,
    "**/archive": true,
    "**/archive-consolidated": true,
    "**/build/logs": true,
    "**/linux-distribution/SynOS-Linux-Builder": true,
    "**/dist": true,
    "**/.cache": true,
    "**/tmp": true,
    "**/*.tmp": true,
    "**/*.log": true,
    "**/*.pyc": true,
    "**/__pycache__": true,
    "**/advanced_ai": true,
    "**/cloud_native": true,
    "**/enterprise": true,
    "**/galactic": true,
    "**/multi_cloud": true,
    "**/*.iso": true,
    "**/*.squashfs": true,
    "**/*.img": true
  },

  "files.watcherExclude": {
    "**/target/**": true,
    "**/.venv/**": true,
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/logs/**": true,
    "**/archive/**": true,
    "**/build/**": true,
    "**/dist/**": true,
    "**/.cache/**": true,
    "**/tmp/**": true,
    "**/linux-distribution/SynOS-Linux-Builder/**": true,
    "**/*.iso": true,
    "**/*.squashfs": true,
    "**/*.img": true
  },

  "search.exclude": {
    "**/target": true,
    "**/Cargo.lock": true,
    "**/.venv": true,
    "**/node_modules": true,
    "**/logs": true,
    "**/archive": true,
    "**/build": true,
    "**/dist": true,
    "**/linux-distribution/SynOS-Linux-Builder": true,
    "**/*.iso": true,
    "**/*.squashfs": true,
    "**/*.img": true,
    "**/.git/objects": true
  },

  // ‚úèÔ∏è Editor Configuration
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.rulers": [100, 120],
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.codeLens": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.snippetSuggestions": "top",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.addMissingImports": "explicit"
  },
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggest.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",

  // üîÑ Git Configuration
  "git.autofetch": false,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.ignoreLimitWarning": true,

  // üêç Python Configuration
  "python.analysis.typeCheckingMode": "off",
  "python.analysis.memory.keepLibraryAst": false,
  "python.analysis.indexing": false,
  "python.linting.enabled": false,
  "python.linting.pylintEnabled": false,
  "python.formatting.provider": "black",

  // üîß C/C++ Configuration
  "C_Cpp.intelliSenseEngine": "disabled",
  "C_Cpp.errorSquiggles": "disabled",
  "C_Cpp.enhancedColorization": "disabled",
  "C_Cpp.autocomplete": "disabled",

  // üî® Build Configuration
  "makefile.configureOnOpen": true,
  "makefile.extensionOutputFolder": "./.vscode",
  "makefile.launchConfigurations": [
    {
      "cwd": "/home/diablorain/Syn_OS",
      "binaryPath": "${command:makefile.getLaunchTargetPath}",
      "binaryArgs": []
    }
  ],

  // üîç Shell Script Configuration
  "shellcheck.enable": true,
  "shellcheck.run": "onSave",

  // üì¶ Extension Specific
  "cSpell.words": [
    "SynOS",
    "cybersec",
    "mssp",
    "debian",
    "systemd",
    "chroot",
    "squashfs",
    "preseed",
    "udev",
    "grub",
    "bootloader",
    "initramfs",
    "vmlinuz",
    "kthreads",
    "syscalls",
    "ptrace"
  ],

  // ü¶Ä Rust-Specific Settings
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.semanticHighlighting.enabled": true
  },

  // üêç Python-Specific Settings
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  // üìÑ Markdown-Specific Settings
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },

  // üìã TOML-Specific Settings
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },

  // üîß JSON-Specific Settings
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  // üìú Shell Script Settings
  "[shellscript]": {
    "editor.defaultFormatter": null,
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },

  // üê≥ Container Development
  "dev.containers.copyGitConfig": true,
  "dev.containers.gitCredentialHelperConfigLocation": "system",

  // üîß Task Enhancement
  "task.allowAutomaticTasks": "on",
  "task.saveBeforeRun": "always",

  // üß™ Testing Framework
  "testExplorer.useNativeTesting": true,
  "rust-analyzer.runnables.cargoExtraArgs": ["--release"],

  // üéØ Debugging Enhancement
  "debug.allowBreakpointsEverywhere": true,
  "debug.openDebug": "openOnDebugBreak",
  "debug.showBreakpointsInOverviewRuler": true,
  "debug.terminal.clearBeforeReusing": true,

  //  Color Customizations
  "workbench.colorCustomizations": {
    "terminal.background": "#1a1a1a",
    "panel.background": "#1e1e1e",
    "sideBar.background": "#1a1a1a",
    "activityBar.background": "#1a1a1a",
