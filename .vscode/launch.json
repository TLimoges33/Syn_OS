{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üîß Debug Kernel (QEMU + GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/kernel/synaptic_kernel.elf",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb-multiarch",
      "miDebuggerServerAddress": "localhost:1234",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set architecture to i386:x86-64",
          "text": "set architecture i386:x86-64",
          "ignoreFailures": false
        },
        {
          "description": "Set disassembly flavor to Intel",
          "text": "set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "start-qemu-debug",
      "logging": {
        "moduleLoad": false,
        "programOutput": true,
        "exceptions": true
      }
    },
    {
      "name": "ü¶Ä Debug Rust Kernel",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/target/x86_64-syn_os/debug/syn_os_kernel",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_BACKTRACE": "full"
      },
      "preLaunchTask": "üîß Build Kernel"
    },
    {
      "name": "üõ°Ô∏è Debug Security Module",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/security_module",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_LOG": "debug"
      },
      "preLaunchTask": "üõ°Ô∏è Build Security Framework"
    },
    {
      "name": "üêç Debug Python Security Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tests/test_security.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Debug Go Orchestrator",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/services/orchestrator/main.go",
      "env": {
        "ENV": "development"
      },
      "args": []
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug Bootloader",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bootloader/bootloader.bin",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb-multiarch",
      "miDebuggerServerAddress": "localhost:1234",
      "setupCommands": [
        {
          "description": "Set architecture to i8086",
          "text": "set architecture i8086",
          "ignoreFailures": false
        },
        {
          "description": "Enable real mode debugging",
          "text": "set tdesc filename target.xml",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
