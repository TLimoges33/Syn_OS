            sudo apt install -y $CUSTOM_TOOLS
            echo -e "${GREEN}âœ“ Custom tools installed${NC}"
        fi
        ;;
    5|*)
        echo ""
        echo -e "${YELLOW}âš  Skipping tool installation${NC}"
        echo "Install later with: sudo synos-install-security-tools"
