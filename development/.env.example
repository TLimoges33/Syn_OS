# =========================================================
# SynOS Development Environment Configuration
# =========================================================
# TEMPLATE FILE - Copy to .env and fill in your values
# ⚠️  NEVER commit .env files with real credentials
# =========================================================

# ===================
# DATABASE CONFIGURATION
# ===================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=syn_os
POSTGRES_USER=syn_os_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ===================
# CACHE & MESSAGE QUEUES
# ===================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_or_empty_string

NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=syn_os_cluster
NATS_CLIENT_ID=dev_client
NATS_MAX_RECONNECT=5

# ===================
# SECURITY KEYS (Development Only)
# ===================
# ⚠️  Generate unique keys for development
# ⚠️  NEVER use these example values in production
# Generate with: openssl rand -hex 32

JWT_SECRET_KEY=generate_your_own_64_char_hex_key_here_000000000000000000000000000000
ENCRYPTION_KEY=generate_your_own_64_char_hex_key_here_000000000000000000000000000000
CONSCIOUSNESS_ENCRYPTION_KEY=generate_your_own_64_char_hex_key_here_000000000000000000000000000000
INTERNAL_API_KEY=your_internal_api_key_here

# ===================
# LOGGING & MONITORING
# ===================
LOG_LEVEL=INFO
RUST_LOG=syn_os=debug,info
RUST_BACKTRACE=1

# ===================
# DEVELOPMENT FEATURES
# ===================
DEBUG_MODE=true
ENABLE_CONSCIOUSNESS_DEBUG=true
ENABLE_SECURITY_VERBOSE=false
KERNEL_DEBUG_OUTPUT=true

