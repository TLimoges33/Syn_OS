{
  "name": "synos-development",
  "version": "1.0.0",
  "description": "SynOS Development Environment and MCP Servers",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "start": "python -m mcp_servers.shell_mcp_server",
    "start:test": "python -m mcp_servers.test_simple_mcp_server",
    "start:all": "concurrently \"npm run start\" \"npm run start:test\"",
    "test": "pytest",
    "test:coverage": "pytest --cov=mcp_servers --cov=mcp --cov-report=html",
    "test:unit": "pytest -m unit",
    "test:integration": "pytest -m integration",
    "test:performance": "pytest -m \"not slow\"",
    "lint": "flake8 mcp_servers/ mcp/ tests/",
    "format": "black . && isort .",
    "type-check": "mypy mcp_servers/ mcp/",
    "quality": "npm run format && npm run lint && npm run type-check",
    "build": "python -m build",
    "install:dev": "pip install -e \".[dev]\"",
    "install:test": "pip install -e \".[test]\"",
    "setup:env": "python -m venv mcp_env && source mcp_env/bin/activate && pip install -r requirements.txt",
    "clean": "rm -rf build/ dist/ *.egg-info/ .pytest_cache/ .coverage htmlcov/",
    "security:audit": "safety check",
    "docs:build": "sphinx-build -b html docs/ docs/_build/",
    "pre-commit": "pre-commit run --all-files",
    "claude": "node node_modules/@anthropic-ai/claude-code/cli.js",
    "claude-setup": "./scripts/setup-claude.sh",
    "claude-mcp": "./scripts/setup-claude-mcp.sh",
    "claude-env": "source ./scripts/claude-mcp-env.sh",
    "claude-token": "./scripts/claude setup-token",
    "claude-config": "./scripts/claude config",
    "postinstall": "./scripts/setup-claude.sh"
  },
  "keywords": [
    "synos",
    "mcp",
    "development",
    "security",
    "consciousness",
    "operating-system"
  ],
  "author": "SynOS Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/synos-ai/synos.git",
    "directory": "development"
  },
  "bugs": {
    "url": "https://github.com/synos-ai/synos/issues"
  },
  "homepage": "https://docs.synos.ai",
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.9.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.110"
  },
  "python": {
    "requirements": "requirements.txt",
    "main": "mcp_servers",
    "test": "pytest",
    "entry_points": {
      "synos-shell-mcp": "mcp_servers.shell_mcp_server:main",
      "synos-test-mcp": "mcp_servers.test_simple_mcp_server:main"
    }
  },
  "config": {
    "python_version": "3.11",
    "mcp_server_host": "localhost",
    "mcp_server_port": "8000",
    "log_level": "INFO",
    "security_level": "high"
  }
}
