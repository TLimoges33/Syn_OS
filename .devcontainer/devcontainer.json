{
  "name": "Master Dev Codespace - Syn_OS",
  "dockerFile": "Dockerfile.master-dev",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "git.autofetch": true,
        "git.enableSmartCommit": true,
        "git.confirmSync": false,
        "files.autoSave": "afterDelay",
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "rust-analyzer.server.path": "/usr/local/bin/rust-analyzer",
        "workbench.colorTheme": "GitHub Dark Default",
        "workbench.startupEditor": "readme"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "rust-lang.rust-analyzer",
        "ms-vscode.vscode-json",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.vscode-terminal",
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        "ms-vscode.remote-repositories",
        "streetsidesoftware.code-spell-checker"
      ]
    }
  },
  "postCreateCommand": "bash setup_master_dev_simple.sh",
  "postStartCommand": "echo 'ðŸŽ¯ Master Dev Codespace Ready! Run: dashboard'",
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/Syn_OS-Dev-Team",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/rust:1": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  "forwardPorts": [
    3000,
    8000,
    8080
  ]
}
