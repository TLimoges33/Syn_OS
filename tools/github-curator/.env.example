# GitHub Repository Curator Environment Configuration

# GitHub API Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=your_github_username

# Fork Settings
FORK_AS_PRIVATE=true
FORK_PREFIX=""
FORK_SUFFIX=""
MAX_CONCURRENT_FORKS=5

# Curation Settings
AUTO_CATEGORIZE=true
UPDATE_DESCRIPTIONS=true
CREATE_TOPICS=true

# Storage Paths
DATA_DIR=./data
CACHE_DIR=./cache
DOCS_DIR=./library_docs

# Database
DATABASE_URL=sqlite:///./curator.db
REDIS_URL=redis://localhost:6379

# Web Dashboard
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8080
DASHBOARD_SECRET_KEY=your-secret-key-change-this-in-production

# Rate Limiting
GITHUB_RATE_LIMIT_BUFFER=100
REQUESTS_PER_HOUR=4000

# Sync Configuration
SYNC_INTERVAL_HOURS=24
SYNC_ON_STARTUP=false

# Quality Thresholds
MIN_STARS_THRESHOLD=10

# Documentation
GENERATE_README=true
INCLUDE_STATS=true
MARKDOWN_TEMPLATE=default
