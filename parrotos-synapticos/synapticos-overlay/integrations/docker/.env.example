# SynapticsOS Integration Environment Configuration
# Copy this file to .env and fill in your values

# Vault Configuration
VAULT_ROOT_TOKEN=your-vault-root-token-here
VAULT_TOKEN=your-vault-app-token-here

# Database Credentials
KNOWLEDGE_DB_USER=knowledge_user
KNOWLEDGE_DB_PASSWORD=secure-password-here

# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=secure-password-here
N8N_ENCRYPTION_KEY=your-32-char-encryption-key-here

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure-password-here

# Service API Keys (stored in Vault)
# These are paths in Vault where the actual keys are stored
OPENAI_KEY_PATH=secret/data/openai
CONTEXT_AI_KEY_PATH=secret/data/contextai
JACE_AI_KEY_PATH=secret/data/jaceai
VERCEL_KEY_PATH=secret/data/vercel
SPEECHIFY_KEY_PATH=secret/data/speechify

# Network Configuration
EXTERNAL_DOMAIN=synapticos.local
SSL_CERT_PATH=/etc/ssl/certs/synapticos.crt
SSL_KEY_PATH=/etc/ssl/private/synapticos.key

# Resource Limits
CONTAINER_MEMORY_LIMIT=2g
CONTAINER_CPU_LIMIT=2

# Logging
LOG_LEVEL=info
LOG_FORMAT=json