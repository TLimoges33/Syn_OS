# Syn_OS Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=syn_os
POSTGRES_USER=your_secure_username
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_USER=your_nats_user
NATS_PASSWORD=your_nats_password

# JWT Configuration
JWT_SECRET_KEY=your_256_bit_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# API Gateway Configuration
INTERNAL_API_KEY=your_internal_api_key_here
EXTERNAL_API_KEY=your_external_api_key_here
API_RATE_LIMIT=1000

# Vault Configuration (for production)
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=your_vault_token_here
VAULT_MOUNT_PATH=secret

# Encryption Keys
ENCRYPTION_KEY=your_32_byte_encryption_key_here
SIGNING_KEY=your_signing_key_here

# Monitoring Configuration
PROMETHEUS_USER=prometheus
PROMETHEUS_PASSWORD=your_prometheus_password
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false
ENVIRONMENT=production
CORS_ORIGINS=https://yourdomain.com

# Security Configuration
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_MTLS=true
SESSION_TIMEOUT_MINUTES=30

# Consciousness System Configuration
CONSCIOUSNESS_MODE=production
LM_STUDIO_API_KEY=your_lm_studio_key
CONSCIOUSNESS_ENCRYPTION_KEY=your_consciousness_encryption_key