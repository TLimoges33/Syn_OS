# SynOS Development Environment Variables
# Copy this to .env and fill in your values

# Environment
ENV=development

# Database Configuration
POSTGRES_DB=synos_dev
POSTGRES_USER=synos_dev
POSTGRES_PASSWORD=dev_password

# Redis Configuration
REDIS_PASSWORD=

# NATS Configuration
NATS_URL=nats://localhost:4222

# API Keys (for development - use dummy/test keys)
GEMINI_API_KEY=dev_test_key
OPENAI_API_KEY=dev_test_key
ANTHROPIC_API_KEY=dev_test_key
DEEPSEEK_API_KEY=dev_test_key

# Local AI Services
LM_STUDIO_URL=http://localhost:1234
OLLAMA_URL=http://localhost:11434

# Security (use simple values for development)
JWT_SECRET_KEY=dev_jwt_secret_key_change_me
ENCRYPTION_KEY=dev_encryption_key_change_me
SIGNING_KEY=dev_signing_key_change_me

# Logging
LOG_LEVEL=debug

# Performance (reduced for development)
RAY_BATCH_SIZE=10
RAY_WORKERS=2
FASTAPI_WORKERS=1
PERFORMANCE_MODE=development
